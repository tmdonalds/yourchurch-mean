div(class="row col-md-6 col-md-offset-3")
    div(class="jumbotron")
        h1 Login
        form(ng-submit="login.doLogin()")
            div(class="form-group")
                label Username
                input(type="text",class="form-control",ng-model="login.loginData.username")
            div(class="form-group")
                label Password
                input(type="password",class="form-control",ng-model="login.loginData.password")
            div(class="alert alert-danger",ng-if="login.error") {{ login.error }}

            button(type="submit",class="btn btn-block btn-primary")
                span(ng-if="!login.processing") Login
                span(ng-if="login.processing",class="spinner",span class="glyphicon glyphicon-repeat")
