div(class="page-header")
	h1 Users
		a(href="/users/create",class="btn btn-default")
			span(class="glyphicon glyphicon-plus") New User

div(class="jumbotron text-center",ng-show="user.processing")
	span(class="glyphicon glyphicon-repeat spinner") Loading Users...

table(class="table table-bordered table-striped",ng-show="user.users")
	thead
		tr
			th _id
			th Name
			th Username
			th(class="col-sm-2")
	tbody
		tr(ng-repeat="person in user.users")
			td {{ person._id }}
			td {{ person.name }}
			td {{ person.email }}
			td(class="col-sm-2")
				a(ng-href="/users/{{ person._id }}",class="btn btn-danger") Edit
				a(href="#",ng-click="user.deleteUser(person._id)",class="btn btn-primary") Delete